= simple_form_for(@profile,url: user_profile_path(current_user),html: {class: 'form-horizontal'}) do |f|
  .form-inputs
    = f.error_notification
    = f.input :first_name
    = f.input :last_name
    = f.input :city
    = f.input :state
    = f.input :avatar
    =# f.input :country

  .form-actions
    = f.button :submit ,button_name,class: 'btn-info'
