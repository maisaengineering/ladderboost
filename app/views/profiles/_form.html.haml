= simple_form_for(@profile,url: user_profile_path(current_user),html: {class: 'form-horizontal'}) do |f|
  .form-inputs
    = f.error_notification
    .form-inputs.row
      = f.input :first_name, wrapper_html: {class: 'span4'}
      = f.input :last_name, wrapper_html: {class: 'span4'}
    .form-inputs.row
      = f.input :phone_number, wrapper_html: {class: 'span4'}
      = f.input :birth_day, wrapper_html: {class: 'span4'}
    .form-inputs.row
      = f.input :professional_headline,placeholder: 'Software Engineer,Designer', wrapper_html: {class: 'span4'}
      = f.input :location, wrapper_html: {class: 'span4'}
    .form-inputs.row
      = f.input :city, wrapper_html: {class: 'span4'}
      = f.input :state, :as => :string, wrapper_html: {class: 'span4'}
    = f.input :nickname ,as: :hidden
    -#.form-inputs.row
      = f.input :country,:as => :select ,wrapper_html: {class: 'span4'}
      = f.input :zip_code, wrapper_html: {class: 'span4'}

    = f.input :avatar

  .form-actions
    = f.button :submit ,button_name,class: 'btn-info'
