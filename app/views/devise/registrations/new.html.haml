.background
  .shadow
  =image_tag("logo.png", :class => "logo")
  .sign_up
    %h3 Sign Up
  .forms_fields
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: 'form-horizontal' } ) do |f|
      -#= f.error_notification
      -#= display_base_errors resource
      -#= f.input :name, label: 'User Name'
      = f.input :email
      = f.input :password
      = f.input :password_confirmation, label: 'Password Confirmation'
      = f.input :roles, :collection => User::ROLES, :as => :check_boxes, :label => "I am", :item_wrapper_class => 'inline'
      .button
        = f.submit 'Sign up',id: 'save'
    .other_login
      %p.other_login_text
        or
        %br/
        Create account using
      -#%img{:src => "images/Layer5copy.png"}/
    .social_account
      = link_to image_tag("twitterlogo.png", :size => "50x50"),omniauth_authorize_path(resource_name, "twitter")
      = link_to image_tag("linkedin.jpg"),omniauth_authorize_path(resource_name, "linkedin")
      %br/
      %br/
      = link_to image_tag("googleplus.jpg"),omniauth_authorize_path(resource_name, "google")
      = link_to image_tag("facebook.jpg"),omniauth_authorize_path(resource_name, "facebook")
    .downshadow
      = image_tag("Layer1.png")
    .topshadow
      = image_tag("Layer1.png")